doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Products Page
    body 
    h1= title 
    div 
        each product in products
            .item-container 
            a(href=`/products/${product.id}`) 
             h2.item-heading= product.title 
            p.item-description= product.description
            p.item-price= product.price
            button.item-cart-btn ElNamer
